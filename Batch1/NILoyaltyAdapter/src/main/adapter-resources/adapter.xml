    <description>NILoyaltyAdapter</description>
    <connectivity>
        <connectionPolicy xsi:type="http:HTTPConnectionPolicyType">
            <protocol>https</protocol>
            <domain>RTAMHTIBSTGEMS1.rtatestdom.local</domain>
