<mfp:adapter name="drivers_and_vehicles_SalikRechargeAdapter" xmlns:http="http://www.ibm.com/mfp/integration/http" xmlns:mfp="http://www.ibm.com/mfp/integration" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <displayName>drivers_and_vehicles_SalikRechargeAdapter</displayName>
    <description>drivers_and_vehicles_SalikRechargeAdapter</description>
    <connectivity>
        <connectionPolicy xsi:type="http:HTTPConnectionPolicyType">
            <protocol>https</protocol>
            <domain>EIPTIBAM2.RTA.GLOBAL</domain>
            <port>21020</port>
            <connectionTimeoutInMilliseconds>60000</connectionTimeoutInMilliseconds>
            <socketTimeoutInMilliseconds>60000</socketTimeoutInMilliseconds>
            <maxConcurrentConnectionsPerNode>50</maxConcurrentConnectionsPerNode>
        </connectionPolicy>
    </connectivity>
    <procedure name="getSalikCustomerBalance" />
    <procedure name="validateSalikCustomerAccount" />
    <procedure name="verifySalikCustomerAccount" />
    <procedure name="recordSalikPaymentTransaction" />
    <procedure name="getSalikTransactionStatus" />

    	<property name="drivers_and_vehicles_is_debugging"  description="drivers_and_vehicles_is_debugging" defaultValue="${DriversAndVehiclesIsDebugging}$"/>
    <property name="wsse.tibco.username"  description="wsse.tibco.username" defaultValue="${wsseTibcoUsername}$"/>
    <property name="wsse.tibco.password"  description="wsse.tibco.password" defaultValue="${wsseTibcoPassword}$"/>
</mfp:adapter>
