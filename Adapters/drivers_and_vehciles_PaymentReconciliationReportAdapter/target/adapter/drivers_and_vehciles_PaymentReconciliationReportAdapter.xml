<ns2:adapter name="drivers_and_vehciles_PaymentReconciliationReportAdapter" platformVersion="7.1.0.00.20161006-0540" xmlns:ns2="http://www.ibm.com/mfp/integration">
    <displayName>drivers_and_vehciles_PaymentReconciliationReportAdapter</displayName>
    <description>drivers_and_vehciles_PaymentReconciliationReportAdapter</description>
    <connectivity>
        <connectionPolicy xmlns:ns4="http://www.ibm.com/mfp/integration/http" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="ns4:HTTPConnectionPolicyType">
            <protocol>https</protocol>
            <domain>test12c</domain>
            <port>7783</port>
            <connectionTimeoutInMilliseconds>30000</connectionTimeoutInMilliseconds>
            <socketTimeoutInMilliseconds>30000</socketTimeoutInMilliseconds>
            <maxConcurrentConnectionsPerNode>200</maxConcurrentConnectionsPerNode>
        </connectionPolicy>
    </connectivity>
    <procedure name="getPostponedPaymentDetails" />

    <property name="drivers_and_vehicles_mail_port"  description="drivers_and_vehicles_mail_port" defaultValue="${driversandVehiclesMailPort}$"/>
	<property name="drivers_and_vehicles_mail_host"  description="drivers_and_vehicles_mail_host" defaultValue="${driversandVehiclesMailHost}$"/>
	<property name="drivers_and_vehicles_mail_toMailAddress"  description="drivers_and_vehicles_mail_toMailAddress" defaultValue="driversandVehiclesMailtoMailAddress"/>
	<property name="drivers_and_vehicles_mail_user"  description="drivers_and_vehicles_mail_user" defaultValue="${driversandVehiclesMailUser}$"/>
	<property name="drivers_and_vehicles_mail_pass"  description="drivers_and_vehicles_mail_pass" defaultValue="driversandVehiclesMailPass"/>
</ns2:adapter>
