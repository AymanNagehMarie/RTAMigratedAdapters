<mfp:adapter name="corporate_RMSAdapter" xmlns:http="http://www.ibm.com/mfp/integration/http" xmlns:mfp="http://www.ibm.com/mfp/integration" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <displayName>corporate_RMSAdapter</displayName>
    <description>corporate_RMSAdapter</description>
    <connectivity>
        <connectionPolicy xsi:type="http:HTTPConnectionPolicyType">
            <protocol>https</protocol>
            <domain>${rtamhtibstgamx1rtatestdomlocal}$</domain>
            <port>${eiptibamrtaglobalport11057}$</port>
            <connectionTimeoutInMilliseconds>120000</connectionTimeoutInMilliseconds>
            <socketTimeoutInMilliseconds>30000</socketTimeoutInMilliseconds>
            <maxConcurrentConnectionsPerNode>2</maxConcurrentConnectionsPerNode>
        </connectionPolicy>
    </connectivity>
    <procedure name="getSalesOrders" />
    <procedure name="getSalesOrderTotalAmount" />
    <procedure name="generatePreformaInvoice" />

    <property name="tokens.tipcoService.username"  description="tokens.tipcoService.username" defaultValue="${tipcoServiceUsername}$"/>
    <property name="tokens.tipcoService.password"  description="tokens.tipcoService.password" defaultValue="${tipcoServicePassword}$"/>
</mfp:adapter>
